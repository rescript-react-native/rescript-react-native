{
  "name": "reason-react-native",
  "version": "0.60.0",
  "peerDependencies": {
    "react-native": "^0.60.0",
    "reason-react": "^0.7.0"
  },
  "repository": "https://github.com/reasonml-community/reason-react-native.git",
  "license": "MIT",
  "keywords": [
    "reason",
    "reasonml",
    "bucklescript",
    "react-native"
  ],
  "files": [
    "*",
    "!.DS_Store",
    "!**/*.bs.js",
    "!.merlin",
    "!lib/bs",
    "!lib/ocaml"
  ],
  "scripts": {
    "format:most": "prettier --write \"**/*.{md,json,js,css}\"",
    "format:re": "find . -name \"*.re\" -or -name \"*.rei\" | grep -v \"node_modules\" | xargs bsrefmt --in-place",
    "format": "yarn format:most && yarn format:re",
    "re:start": "bsb -make-world -w",
    "re:build": "bsb -make-world",
    "re:clean-build": "bsb -clean-world -make-world",
    "start": "yarn re:start",
    "build": "yarn re:build",
    "test": "yarn re:clean-build"
  },
  "devDependencies": {
    "bs-platform": "^5.0.4",
    "husky": "^1.3.1",
    "lerna": "^3.4.0",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^3.0.0",
    "prettier": "^1.16.4",
    "reason-react": "^0.7.0"
  },
  "prettier": {
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "lint-staged": {
    "*.{md,json,js,css}": [
      "prettier --write",
      "git add"
    ],
    "*.{re,rei}": [
      "bsrefmt --in-place",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
