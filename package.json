{
  "name": "rescript-react-native",
  "description": "ReScript bindings for React Native.",
  "version": "0.64.2",
  "peerDependencies": {
    "@rescript/react": "^0.10.0",
    "bs-platform": "^9.0.0",
    "react-native": "^0.64.0"
  },
  "repository": "https://github.com/rescript-react-native/rescript-react-native.git",
  "license": "MIT",
  "keywords": [
    "rescript",
    "react-native"
  ],
  "files": [
    "*.md",
    "bsconfig.json",
    "src/**/*.res",
    "src/**/*.resi",
    "src/**/*.js",
    "!src/**/*.bs.js"
  ],
  "scripts": {
    "format:most": "prettier --write \"**/*.{md,json,js,css}\"",
    "format:re": "find . -name \"*.re\" -or -name \"*.rei\" | grep -v \"node_modules\" | xargs bsrefmt --in-place",
    "format": "yarn format:most && yarn format:re",
    "re:start": "bsb -make-world -w",
    "re:build": "bsb -make-world",
    "re:clean-build": "bsb -clean-world -make-world",
    "start": "yarn re:start",
    "build": "yarn re:build",
    "test": "yarn re:clean-build",
    "release": "npmpub"
  },
  "devDependencies": {
    "@rescript/react": "^0.10.0",
    "bs-platform": "^9.0.0",
    "husky": "^4.0.0",
    "lint-staged": "^10.0.0",
    "npm-run-all": "^3.0.0",
    "npmpub": "^5.0.0",
    "prettier": "^2.0.0"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.{md,json,js,css}": [
      "prettier --write"
    ],
    "*.{re,rei}": [
      "bsrefmt --in-place"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
