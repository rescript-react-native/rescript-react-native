{
  "name": "reason-react-native",
  "version": "0.62.3",
  "peerDependencies": {
    "bs-platform": "^7.3.0",
    "react-native": "^0.62.0",
    "reason-react": "^0.8.0"
  },
  "repository": "https://github.com/reason-react-native/reason-react-native.git",
  "license": "MIT",
  "keywords": [
    "reason",
    "reasonml",
    "bucklescript",
    "react-native"
  ],
  "files": [
    "*",
    "!.github",
    "!.DS_Store",
    "!**/*.bs.js",
    "!.merlin",
    "!lib/bs",
    "!lib/ocaml"
  ],
  "scripts": {
    "format:most": "prettier --write \"**/*.{md,json,js,css}\"",
    "format:re": "find . -name \"*.re\" -or -name \"*.rei\" | grep -v \"node_modules\" | xargs bsrefmt --in-place",
    "format": "yarn format:most && yarn format:re",
    "re:start": "bsb -make-world -w",
    "re:build": "bsb -make-world",
    "re:clean-build": "bsb -clean-world -make-world",
    "start": "yarn re:start",
    "build": "yarn re:build",
    "test": "yarn re:clean-build",
    "release": "npmpub"
  },
  "devDependencies": {
    "bs-platform": "^7.3.0",
    "husky": "^1.3.1",
    "lint-staged": "^10.1.1",
    "npm-run-all": "^3.0.0",
    "npmpub": "^5.0.0",
    "prettier": "^1.16.4",
    "reason-react": "^0.8.0"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.{md,json,js,css}": [
      "prettier --write"
    ],
    "*.{re,rei}": [
      "bsrefmt --in-place"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
